@model Projekt_ANM.Models.Car

@{
    ViewBag.Title = "Usuwanie";
}


<h3>Czy na pewno chcesz usunąć ten samochód?</h3>
<div>
    <h4>Usuwając samochód usuwasz wszystkie z nim powiązane rezerwację!</h4>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CarName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CarRegistration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarRegistration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VIN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductionYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductionYear)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Wróć do samochodów", "Index", new { id = 1 }, new { @class = "btn btn-default" })

            <input type="submit" value="Usuń" class="btn btn-danger" />
        </div>
    }
</div>
